<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorDarkBlue</item>
    </style>

    <style name="CircularProgress2" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="ButtonCustom" parent="Theme.AppCompat">
        <item name="android:background">@drawable/ripple_btn</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextLimitError" parent="TextAppearance.AppCompat.Small">
    <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="CounterText" parent="TextAppearance.Design.Counter">
        <item name="android:textColor">@color/colorTransparent</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorDarkBlue2</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="menuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorDarkBlue2</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowTitleSize">20sp</item>
    </style>

    <style name="toolbarTitleSize" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
